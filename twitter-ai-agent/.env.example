# === CORE SETTINGS ===
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-min-32-chars-here
API_VERSION=v1

# === DATABASE ===
DATABASE_URL=postgresql://user:password@localhost:5432/twitter_bot

# === REDIS ===
REDIS_URL=redis://localhost:6379/0

# === CELERY ===
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# === TWITTER CREDENTIALS ===
TWITTER_USERNAME=your_username
TWITTER_PASSWORD=your_password
TWITTER_EMAIL=your_email@domain.com

# === PROXY SETTINGS ===
PROXY_HOST=proxy.provider.com
PROXY_PORT=22225
PROXY_USERNAME=your_proxy_user
PROXY_PASSWORD=your_proxy_pass

# === AI/LLM SETTINGS ===
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-3.5-turbo-0125
GOOGLE_API_KEY=
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# === IMAGE GENERATION (Nano Banana) ===
IMAGE_MODEL=nano-banana
IMAGE_USE_LOCAL=true
IMAGE_DEVICE=cuda
IMAGE_OUTPUT_FORMAT=png
IMAGE_MAX_SIZE=1024

# === MONITORING ===
SENTRY_DSN=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# === RATE LIMITS ===
MAX_TWEETS_PER_HOUR=5
MAX_REPLIES_PER_HOUR=10
MIN_ACTION_DELAY=30
MAX_ACTION_DELAY=120

# === CONTENT SETTINGS ===
BRAND_VOICE=professional
CONTENT_TOPICS=AI,technology,automation

# === FEATURE FLAGS ===
ENABLE_AUTO_POSTING=true
ENABLE_AUTO_REPLIES=true
ENABLE_IMAGE_GENERATION=true
ENABLE_VIDEO_GENERATION=false
REQUIRE_HUMAN_REVIEW=true

# === SECURITY ===
ENCRYPTION_KEY=your-32-byte-encryption-key-here
